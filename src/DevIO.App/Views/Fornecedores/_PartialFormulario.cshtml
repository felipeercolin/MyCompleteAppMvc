@model DevIO.App.ViewModels.FornecedorViewModel
<div class="form-group">
    <label asp-for="Nome" class="control-label"></label>
    <input asp-for="Nome" class="form-control" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="TipoFornecedor" class="control-label"></label>
    <input type="radio" value="1" asp-for="TipoFornecedor" checked="@( (Model?.TipoFornecedor ?? 1) == 1 ? "true" : "false" )" /> Pessoa Física &nbsp;&nbsp;
    <input type="radio" value="2" asp-for="TipoFornecedor" checked="@( (Model?.TipoFornecedor ?? 1) == 2 ? "true" : "false" )" /> Pessoa Jurídica
</div>
<div class="form-group">
    <label asp-for="Documento" class="control-label"></label>
    <input asp-for="Documento" class="form-control" />
    <span asp-validation-for="Documento" class="text-danger"></span>
</div>
@if ((Model?.Id ?? Guid.Empty) == Guid.Empty)
{
   <partial name="_PartialFormularioEndereco"/>
}
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
    </label>
</div>