@using DevIO.App.Extentions
@model IEnumerable<DevIO.App.ViewModels.FornecedorViewModel>

@{
    ViewData["Title"] = "Lista de Fornecedores";
}

<h1>@ViewData["Title"]</h1>
<p supress-by-claim-name="Fornecedor" supress-by-claim-value="Adicionar">
    <a asp-action="Create" class="btn btn-group-sm btn-info">Novo Fornecedor</a>
</p>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Documento)</th>
            <th>@Html.DisplayNameFor(model => model.Ativo)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Nome)</td>
            <td>@this.FormataDocumento(item.Documento)</td>
            <td>@(item.Ativo ? "SIM" : "NÃO")</td>
            <td class="text-right">
                <div class="btn-group-sm">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><span class="fa fa-search"></span></a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><span class="fa fa-pencil-alt"></span></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><span class="fa fa-trash"></span></a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
