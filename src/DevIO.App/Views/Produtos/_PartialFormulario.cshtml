@model DevIO.App.ViewModels.ProdutoViewModel
@{
    Guid.TryParse($"{Model.FornecedorId}", out var fornecedorId);
}
<div class="form-group">
    <label asp-for="FornecedorId" class="control-label col-form-label-sm"></label>
    @if (Model.FornecedorId == Guid.Empty)
    {
        <select asp-for="FornecedorId" class="form-control form-control-sm" asp-items="@(new SelectList(Model.Fornecedores, "Id", "Nome", fornecedorId))">
            <option></option>
        </select>
        <span asp-validation-for="FornecedorId" class="text-danger"></span>
    }
    else
    {
        <label><b>@Model.Fornecedor.Nome</b></label>
    }
</div>
<div class="form-group">
    <label asp-for="Nome" class="control-label col-form-label-sm"></label>
    <input asp-for="Nome" class="form-control form-control-sm" />
    <span asp-validation-for="Nome" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Descricao" class="control-label col-form-label-sm"></label>
    <textarea cols="40" rows="5" asp-for="Descricao" class="form-control form-control-sm"></textarea>
    <span asp-validation-for="Descricao" class="text-danger"></span>
</div>
@if (!string.IsNullOrEmpty(Model.Imagem))
{
    <div class="form-group">
        <label>Imagem Atual</label>
        <img alt="@Model.Imagem" src="~/imagens/@Model.Imagem" class="img-fluid img-thumbnail" style="max-width: 70px;" />
    </div>
}
<div class="form-group">
    <label asp-for="ImagemUpload" class="control-label col-form-label-sm"></label>
    <div class="custom-file">
        <input type="file" class="custom-file-input" id="ImagemUpload" asp-for="ImagemUpload" placeholder="Escolha 1 Imagem para o Produto" />
        <label data-browser="Procurar" style="width: 400px;" class="custom-file-label" for="ImagemUpload"></label>
        <label style="display: none;" id="img_nome"></label>
    </div>
    <span asp-validation-for="ImagemUpload" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Valor" class="control-label col-form-label-sm"></label>
    <input asp-for="Valor" class="form-control form-control-sm" />
    <span asp-validation-for="Valor" class="text-danger"></span>
</div>
<div class="form-group form-check">
    <label class="form-check-label">
        <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
    </label>
</div>