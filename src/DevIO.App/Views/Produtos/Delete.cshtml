@model DevIO.App.ViewModels.ProdutoViewModel

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>@ViewData["Title"]</h1>
<h3>Você tem certeza que deseja excluir o Produto?</h3>
<hr />
<div>
   <partial name="_PartialDetail"/>
    <form asp-action="Delete" class="btn-group-sm">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" />
        <a href="javascript:window.history.back();" class="btn btn-info">Voltar</a>
    </form>
</div>
